{
  "name": "tdd-clean-architecture-node-api",
  "version": "1.2.3",
  "main": "index.js",
  "author": "Andrei Santos <andrei.as3@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/Server.js",
    "build": "rimraf dist && tsc",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/Server.js",
    "up": "npm run build && docker-compose up -d",
    "up:debug": "npm run build && docker-compose -f \"docker-compose-debug.yml\" up -d",
    "stop": "docker-compose down",
    "dev:server": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/main/server.ts",
    "test:all": "jest --runInBand",
    "test:unitSilent": "jest --runInBand -c jest.config.unit.js --silent --noStackTrace --runInBand",
    "test:unit": "jest -c jest.config.unit.js --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:integration": "jest --runInBand -c jest.config.integration.js",
    "test:staged": "jest --passWithNoTests --findRelatedTests --runInBand",
    "test:ci": "jest --passWithNoTests --coverage --runInBand",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "docker:image": "docker build -t clean-node-api .",
    "docker:container": "docker run --name clean-node-api -p 3000:3000 -d clean-node-api",
    "docker:clean-node-api-db": "docker run --name clean-node-api-db -p 27017:27017 -d -t mongo"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.4",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.5",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^14.6.0",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^4.17.0",
    "coveralls": "^3.1.1",
    "eslint": "7",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^16.0.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "git-commit-msg-linter": "^2.4.4",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.7",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^4.2.3"
  }
}
